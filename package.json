{
	"name": "boldgrid-theme-framework",
	"version": "2.22.6",
	"description": "BoldGrid Theme Framework",
	"main": "index.js",
	"engines": {
		"node": ">=20.17.0"
	},
	"babel": {
		"plugins": [
			[
				"@babel/plugin-transform-runtime",
				{
					"absoluteRuntime": false,
					"corejs": 2,
					"helpers": true,
					"regenerator": true,
					"useESModules": false
				}
			],
			[
				"@babel/plugin-syntax-dynamic-import"
			]
		]
	},
	"scripts": {
		"preversion": "bash build/cwd-dirty && yarn run build",
		"update-version": "node build/update-version.js $(pwd)",
		"test": "echo \"Error: no test specified\" && exit 1",
		"phpcs-installStandards": "php node_modules/PHP_CodeSniffer/scripts/phpcs --config-set installed_paths node_modules/WordPress-Coding-Standards/",
		"php-codesniffer": "npm run phpcs-installStandards && php ./node_modules/PHP_CodeSniffer/scripts/phpcs -p -s -v -n ./src --standard=./phpcs.ruleset.xml --ignore=*/wp_bootstrap_navwalker.php,*/woocommerce/* --extensions=php",
		"build": "gulp build",
		"webpack-server": "cross-env NODE_ENV=development webpack-dev-server",
		"build-webpack": "webpack",
		"build-webpack-dev": "cross-env NODE_ENV=development webpack --color",
		"dev": "gulp watch",
		"dev:server": "concurrently \"cross-env NODE_ENV=development gulp watch --silent\" \"npm run webpack-server\"",
		"quick-build": "gulp qbuild",
		"script:patterns": "node --experimental-modules build/patterns.mjs",
		"script:tgm": "node build/tgm.mjs",
		"script:wp-textdomain-lint": "node build/check-text-domains.js",
		"script:zip": "node build/build-zip.js",
		"link-theme": "ln -s $(pwd)/crio ../themes/crio"
	},
	"keywords": [
		"BoldGrid"
	],
	"author": "The BoldGrid Team",
	"license": "GPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BoldGrid/boldgrid-theme-framework.git"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/eslint-parser": "^7.25.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.25.4",
		"chalk": "^5.3.0",
		"eslint": "^9.10.0",
		"fs": "^0.0.1-security",
		"gulp": "^5",
		"gulp-cssnano": "^2.1.3",
		"gulp-eslint": "^6.0.0",
		"gulp-inject-string": "^1.1.2",
		"gulp-modernizr": "^5.0.0",
		"gulp-newer": "^1.4.0",
		"gulp-phpcs": "^3.1.0",
		"gulp-postcss": "^10.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.1.4",
		"gulp-sass": "^5.1.0",
		"gulp-shell": "^0.8.0",
		"gulp-sort": "^2.0.0",
		"gulp-uglify-es": "^3.0.0",
		"gulp-wp-pot": "^2.5.0",
		"gutil": "^1.6.4",
		"mkdirp": "^3.0.1",
		"path": "^0.12.7",
		"postcss": "^8.4.47",
		"sass": "^1.79.1",
		"webpack": "^5",
		"webpack-cli": "^5",
		"yargs": "^17.7.2"
	},
	"dependencies": {
		"Buttons": "https://github.com/boldgrid/Buttons#crio-buttons",
		"float-labels.js": "^3.3.5",
		"font-awesome": "^4.7.0",
		"hamburgers": "https://github.com/jonsuh/hamburgers#v0.9.3",
		"hero-patterns": "^2.0.2",
		"hover.css": "^2.3.1",
		"jarallax": "^1.12.4",
		"jquery": "^3.7.1",
		"jquery-goup": "^1.1.0",
		"jquery.nicescroll": "^3.6.8",
		"kirki-toolkit": "https://github.com/boldgrid/kirki.git#crio-kirki",
		"scssphp": "https://github.com/boldgrid/scssphp#crio-scss",
		"smartmenus": "^1.1.0",
		"wow.js": "^1.2.2"
	}
}
